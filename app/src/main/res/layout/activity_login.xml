<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F4F4F4"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:background="@color/main_text_color"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/user_icon"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:text="登 录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_centerInParent="true"
        >

        <TextView
            style="@style/text_text"
            android:clickable="true"
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:textColor="@drawable/textview_selector"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userwrapper"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/register"
           >
            <EditText
                android:id="@+id/username"
                android:inputType="text"
                android:hint="请输入用户名"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                />
        </android.support.design.widget.TextInputLayout>

        <TextView
            style="@style/text_text"
            android:clickable="true"
            android:id="@+id/modifyPwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/userwrapper"
            android:textColor="@drawable/textview_selector"
            />

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwdwrapper"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/modifyPwd"
            >
            <EditText
                android:id="@+id/pwd"
                android:inputType="textPassword"
                android:hint="请输入密码"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/mark_layout"
            android:layout_below="@+id/pwdwrapper"
            >
            <ImageView
                android:id="@+id/mark_imageView"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/mark" />
            <TextView
                style="@style/text_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remember_name"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_toRightOf="@+id/mark_imageView"
                />
            <TextView
                style="@style/text_text"
                android:clickable="true"
                android:id="@+id/forgetPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="？忘记密码"
                android:layout_alignParentRight="true"
                android:textColor="@drawable/textview_selector"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/mark_layout"
            >
            <Button
                style="@style/button_text"
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="登录"
                android:gravity="center"
                android:background="@drawable/login_button_selector"
                android:onClick="btnClick"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
