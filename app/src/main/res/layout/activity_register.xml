<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#F4F4F4"
    >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:text="注册"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/main_text_color"
            android:textSize="50sp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        >
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mailwrapper"
            android:layout_marginTop="5dp"
            android:focusable="false"
            >
            <EditText
                android:id="@+id/email"
                android:inputType="text"
                android:hint="邮箱"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userwrapper"
            android:layout_marginTop="5dp"
           >
            <EditText
                android:id="@+id/username"
                android:inputType="text"
                android:hint="用户名"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwdwrapper"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/pwd"
                android:inputType="textPassword"
                android:hint="密码"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pwdagainwrapper"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/pwdagain"
                android:inputType="textPassword"
                android:hint="再次输入密码"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterwrapper"
            android:layout_marginTop="30dp"
            >
            <EditText
                android:id="@+id/character_text"
                android:inputType="text"
                android:hint="一句话展现自己的个性"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLength="40"
                />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >

            <Button
                style="@style/button_text"
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="注册"
                android:gravity="center"
                android:background="@drawable/login_button_selector"
                android:onClick="register"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>
